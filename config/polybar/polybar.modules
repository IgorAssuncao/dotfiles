[module/date]
type = internal/date
interval = 0.25
date = %j - %Y-%m-%d -
# Can also use %F - %j (%j is day of the year) for date
time = %H:%M:%S
# Can also use %T for time
label = %date% %time%
label-foreground = ${module/custom.foreground}
format = DATE: <label>
format-foreground = ${module/custom.format-foreground}
